<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View style="@style/LCIMDividerLine.Horizontal"/>

    <RelativeLayout
        android:id="@+id/name_layout"
        style="@style/conversation_detail_base_left_layout">
        <TextView
            style="@style/profile_text_left_item"
            android:text="@string/conversation_name"
            android:id="@+id/text_left"/>

        <include layout="@layout/common_view_right_arrow"
            android:id="@+id/arrow"/>

        <TextView
            android:id="@+id/conversation_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_left"
            android:layout_toLeftOf="@id/arrow"
            android:text="未命名"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp10"
            android:textColor="@color/high_text"
            android:textSize="@dimen/sp16"
            android:paddingTop="@dimen/dp13"
            android:paddingBottom="@dimen/dp13"
            android:ellipsize="end"
            android:singleLine="true"/>

    </RelativeLayout>

    <View style="@style/LCIMDividerLine.Horizontal"/>

    <RelativeLayout
        android:id="@+id/quit_layout"
        style="@style/conversation_detail_base_left_layout">
        <TextView
            style="@style/profile_text_left_item"
            android:text="@string/converstaion_remove_leave"/>

        <include layout="@layout/common_view_right_arrow"/>
    </RelativeLayout>

    <View style="@style/LCIMDividerLine.Horizontal"/>

</LinearLayout>