<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View style="@style/LCIMDividerLine.Horizontal"/>

    <RelativeLayout
        android:id="@+id/name_layout"
        style="@style/conversation_detail_base_left_layout">
        <TextView
            style="@style/profile_text_left_item"
            android:text="@string/conversation_name"/>

        <include layout="@layout/common_view_right_arrow"/>
    </RelativeLayout>

    <View style="@style/LCIMDividerLine.Horizontal"/>

    <RelativeLayout
        android:id="@+id/quit_layout"
        style="@style/conversation_detail_base_left_layout">
        <TextView
            style="@style/profile_text_left_item"
            android:text="@string/converstaion_remove_leave"/>

        <include layout="@layout/common_view_right_arrow"/>
    </RelativeLayout>

    <View style="@style/LCIMDividerLine.Horizontal"/>

</LinearLayout>