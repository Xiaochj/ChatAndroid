<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

<LinearLayout
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp8"
    android:paddingRight="@dimen/dp8"
    android:paddingBottom="@dimen/dp13"
    android:paddingTop="@dimen/dp13">

    <cn.leancloud.chatkit.view.RoundImageView
        android:id="@+id/notify_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/notify_item"
        android:layout_marginRight="@dimen/dp10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/notify_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdfasdfasdf"
                android:textSize="@dimen/sp18"
                android:textColor="@color/high_text"
                android:layout_alignParentLeft="true"
                android:maxLines="2"/>
            <TextView
                android:id="@+id/notify_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-21"
                android:textSize="@dimen/sp14"
                android:textColor="@color/light_text"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/notify_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp8"
            android:textSize="@dimen/sp16"
            android:textColor="@color/light_text"
            android:text="asdfasdfasdfasdfasdfasdlfjasldjfalsdjfalsdjflasdjf的说法是的发送到发送到发送到发斯蒂芬"
            android:maxLines="2"/>
    </LinearLayout>

    </LinearLayout>
    <View style="@style/LCIMDividerLine.Horizontal"
        android:layout_marginLeft="@dimen/dp46"/>
</LinearLayout>